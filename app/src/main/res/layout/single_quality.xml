
                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/qua_root_linear"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2"
                    android:visibility="visible"
                    android:gravity="center"

                    android:background="@color/blue_grey600"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/qua_head"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:paddingTop="5dp"
                        android:gravity="center"
                        android:textSize="18dp"
                        android:paddingLeft="0dp"

                        android:textStyle="bold"
                        android:text="1080p " />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingLeft="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/folder"
                            />
                        <TextView
                            android:id="@+id/tv_size"

                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:paddingLeft="5dp"

                            android:textColor="@color/white"
                            android:text="1.30 GB" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingLeft="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/seed"
                            />
                        <TextView
                            android:id="@+id/tv_seed"

                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:paddingLeft="5dp"

                            android:textColor="@color/white"
                            android:text="4452 Seeds" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="10dp"
                        android:paddingLeft="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@mipmap/leech"
                            />
                        <TextView
                            android:id="@+id/tv_leech"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:paddingLeft="5dp"
                            android:text="2345 Leech" />
                    </LinearLayout>

                    <ru.dimorinny.floatingtextbutton.FloatingTextButton
                        android:id="@+id/btn_copy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        app:floating_background_color="@color/blue_grey700"
                        app:floating_left_icon="@mipmap/magnet"
                        app:floating_title="Copy"
                        app:floating_title_color="@android:color/white"
                        />

                    <ru.dimorinny.floatingtextbutton.FloatingTextButton
                        android:id="@+id/btn_download"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_gravity="center"
                        app:floating_background_color="@color/blue_grey700"
                        app:floating_left_icon="@mipmap/download"
                        app:floating_title="Download"
                        app:floating_title_color="@android:color/white"
                        />

